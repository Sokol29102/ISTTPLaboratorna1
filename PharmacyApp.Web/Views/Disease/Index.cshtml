@model IEnumerable<PharmacyApp.Domain.Entities.Disease>

@{
    ViewData["Title"] = "Diseases";
}

<h2>Diseases</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var disease in Model)
        {
            <tr>
                <td>@disease.Name</td>
                <td>@disease.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@disease.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@disease.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Disease</a>
