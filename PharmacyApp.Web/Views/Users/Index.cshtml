@model IEnumerable<PharmacyApp.Domain.Entities.User>

@{
    ViewData["Title"] = "Користувачі";
}

<h2>Користувачі</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID користувача</th>
            <th>Логін</th>
            <th>Електронна пошта</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <button class="btn btn-primary" onclick="window.location.href='@Url.Action("Create", "Users")'">Створити користувача</button>
</div>

<div>
    <h3>Edit User</h3>
    <input type="text" id="editUserId" placeholder="Enter User ID" />
    <button class="btn btn-warning" onclick="editUser()">Редагувати користувача</button>
</div>

<div>
    <h3>Delete User</h3>
    <input type="text" id="deleteUserId" placeholder="Enter User ID" />
    <button class="btn btn-danger" onclick="deleteUser()">Видалити користувача</button>
</div>

<div>
    <button class="btn btn-secondary" onclick="window.location.href='@Url.Action("UpdateList", "Users")'">Оновити список</button>
</div>

<script>
    function editUser() {
        var userId = document.getElementById("editUserId").value;
        if (userId) {
            window.location.href = '@Url.Action("Edit", "Users")/' + userId;
        } else {
            alert("Please enter a user ID.");
        }
    }

    function deleteUser() {
        var userId = document.getElementById("deleteUserId").value;
        if (userId) {
            window.location.href = '@Url.Action("Delete", "Users")/' + userId;
        } else {
            alert("Please enter a user ID.");
        }
    }
</script>
