@model PharmacyApp.Domain.Entities.Medicine

@{
    ViewData["Title"] = "Створення медикаментів";
}

<h2>Створення медикаментів</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name">Назва</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Опис</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">Ціна</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IconUrl">Зовнішній вигляд</label>
        <input asp-for="IconUrl" class="form-control" />
        <span asp-validation-for="IconUrl" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Створити</button>
</form>
